import turtle
window = turtle.Screen()
window.bgcolor('black')

pen = turtle.Turtle()
pen.up()
pen.goto(-50,-170)
pen.fillcolor('brown')
pen.begin_fill()
pen.speed(10)
pen.down()
pen.forward(140) 
pen.left(80)
pen.forward(200)
pen.left(100)   
pen.forward(210)
pen.left(100)   
pen.forward(200) 
pen.end_fill() 
def draw_concentric_circles(num_circles):
    radius = 30
    radius_increase = 5
    pen = turtle.Turtle()
    pen.speed(100)
    pen.color('green')
    for i in range(num_circles):
         pen.goto(-10,250)
         pen.color('gold')
         pen.left(90)
         pen.down()
         pen.circle(radius,100)
         pen.down()
         r=radius+(num_circles*i)
draw_concentric_circles(40)   
