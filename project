def arc(pen, r):
    pen.up()
    pen.goto(-370,280)
    pen.down()
    pen.backward(radius) 
    pen.left(90)
    pen.down()
    pen.circle(-radius, 180)
    pen.left(90)
    pen.up()
    pen.backward(radius)
wn = turtle.Screen()
pen = turtle.Turtle()
radius = 100
increase = 5
pen.pensize(increase)
colors = ['red', 'orange', 'yellow', 'green', 'blue', 'darkblue', 'purple']
pen.up()
pen.speed(6)
for color in colors:
    pen.color(color)
    arc(pen, radius)
    radius -= increase
